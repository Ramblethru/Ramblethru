<%= simple_form_for Discover.new, :html => {:class => 'form-inline' } do |f| %>
    <%= f.input :destination, label: false, placeholder: "Destination", :class => "destination" %>
    <%= button_to 'Search', { :controller => 'discovers', :action => 'create'}, :class => "input" %>
<% end %>
<script type="text/javascript">
$(function (){
        $('#start_date').datepicker( {
           dateFormat: "mm-dd-yy",
           showButtonPanel: true,
           inline: true,  
           defaultDate: "+1w",
           numberOfMonths: 3,
           onClose: function( selectedDate ) {
            $( "#end_date" ).datepicker( "option", "minDate", selectedDate );
      }

        });
        $('#end_date').datepicker( {
           dateFormat: "mm-dd-yy",
           showButtonPanel: true,
           inline: true,  
           defaultDate: "+1w",
           changeMonth: true,
           numberOfMonths: 3,
           onClose: function( selectedDate ) {
            $( "#from" ).datepicker( "option", "maxDate", selectedDate );
      }
        });

});
</script>