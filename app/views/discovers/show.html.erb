<div class="pagename">
  <h1 class="discover">Discover your destination</h1>
  <div class="location">
    You searched: <%= @discover.destination.split.map(&:capitalize).join(' ') %>
  </div>
</div>
  <div id='map' class='dark'></div>
  <script type='text/javascript'>
    var latitude= '<%=@discover.latitude%>';
    var longitude= '<%=@discover.longitude%>';
    var map = L.mapbox.map('map', 'gregurton.kbc7dghp').setView([latitude, longitude], 5).setZoom([14]);
  </script>
  <div class="recommended-notes">
    <div class="showhide"><a href="#"><h5> Show/hide notes relevant to your destination</h5></a>
    </div>
    <% ramble = Ramble.where(:destination => @discover.destination)  %>
    <% ramble.each do |r| %>

    <% if r.user_id != current_user.id %>
    <% r.notes.each do |n| %>
    <div class="show">
      <div class="nbody">Note: <%= n.body %></div>
      <div class="ntag">Tag: <%= n.tag_list %></div>
    </div>
    <script type="text/javascript">
    $(".showhide").click(function () {
      $(".show").toggle();
    });
    </script>
    <% end %>
    <% end %>
    <% end %>
  </div>
<div class="container">
  <div class="foursq">
    <div class="four-title">Foursquare <i class="fa fa-arrow-circle-o-down"></i>
</i>
</i></div>
<br>
    <% f = @foursquare_venue.each do |f| %>
    <li>
      <div class="f-title">
        <%= f["venue"]["name"] %>
      </div>
    </li>
    <div class="f-tips">
      Address: <%= f["venue"]["location"]["address"] %><br>
      <% f["tips"] %>
      <% f["tips"].each do |g| %>
      <article><%= link_to g["text"], g["canonicalUrl"], :class => "f-tips" %></article>
      <% end %>
    </div>
    <% end %>
  </div>
  <br>
  <div class="yelp">
    <div class="y-title">Yelp <i class="fa fa-arrow-circle-o-down"></i>
</div>
    <br>
    <% @yelp.businesses.each do |y| %>
    <li>
      <%= link_to y.name, y.url, :class => "y-name"  %>
      <%= link_to image_tag y.rating_img_url_small%>
    </li>
    <article class="y-tips"><%= y.snippet_text %></article>
    <% end %>
  </div>
  <br>
  <div class="instagram">
    <div class="ins-title">Instagram <i class="fa fa-arrow-circle-o-down"></i>
</div>
    <br>
    <% i = @instagram_images.each do |i| %>
    <%= link_to image_tag i["images"]["thumbnail"]["url"] %>
    <% end %>
  </div>
  <br>
  <div class="reddit">
    <div class="red-title">Reddit <i class="fa fa-arrow-circle-o-down"></i>
</div><br>
    <% @reddit_thread.each do |r| %>
    <li><%= link_to r["data"]["title"], r["data"]["url"], :class => "r-link" %></li>
    <% end %>
  </div>

  <div class="ramble">
    <h4 class="r-create">Like what you see? Create a ramble (itinerary) below! </h4>
    
    <i class="fa fa-arrow-right"></i>
<%= link_to_modal "Create", new_ramble_path, :class=>"create" %> <i class="fa fa-arrow-left"></i>

  </div>
  <span><h4 class="r-create">or search somewhere new</h4></span>
  <div class="discover-bottom">
    <%= render "/discovers/create" %>
  </div>
</div>
</div>