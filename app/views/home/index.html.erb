
<div class="hero">
	<div class="header-title">
		<h1>Adventure Awaits</h1>
	</div>
	<div class="header-subtitle">
		<h4>Plan your ramble</h4>
	</div>
	<%= form_tag("/rambles/search", method: "get") do %>
		<div class="location-search">
			<%= text_field_tag :destination, nil, placeholder: "Search by your City or Street Address..." %>
			<div class="actions">
        <%= submit_tag "Search" %>
      </div>
    <% end %>
		</div>
	</form>
	
	</div>
<div class="container">
	<div class="homepage-about">
			<h1>What We Do</h1>
	</div>

	<div class="homepage-about-each">
		<div class="discover">
			<h4><%= link_to "Discover", discover_path, :class => "discover" %></h4>
				<article>
					Explore recommendations from your peers about your destination.
				</article>
		</div>

		<div class="create">
			<h4>Create</h4>
				<article>
					Create a personalized itinerary around them.
				</article>
		</div>

		<div class="go">
			<h4>Go</h4>
				<article>
					Something here.
				</article>
		</div>

	</div>
</div>
	<div class="login-register">
		<% if !logged_in? %>
      <h1>Log in</h1>
      <div class="or-signup">(or <%= link_to "sign up for a new account", new_user_path %>)</div>

      <%= render "/logins/login_form" %>
			<br><%= link_to "Log in with Foursquare", "/auth/foursquare" %>
      <br><%= link_to "Log in with Twitter", "/auth/twitter"%>
		<% else %>
			<h3>Welcome,</h3><%= current_user.name %>!
		<% end %>
	</div>
