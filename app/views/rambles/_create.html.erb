<%= simple_form_for Ramble.new do |f| %>
    <%= f.input :destination, label: false, placeholder: "Destination" %>
    <%= f.text_field :start_date, label: false, placeholder: "Start Date",id: 'start_date' %> 
    <%= f.text_field :end_date,label: false, placeholder: "End Date", id: 'end_date' %>
    <%= button_to 'Save this Ramble', { :controller => 'rambles', :action => 'create'} %>

<% end %>
<script>
$(function (){
        $('#start_date').datepicker( {
           dateFormat: "yy-mm-dd",
           showButtonPanel: true,
           inline: true,  
           defaultDate: "+1w",
           numberOfMonths: 3,
           onClose: function( selectedDate ) {
            $( "#end_date" ).datepicker( "option", "minDate", selectedDate );
      }

        });
        $('#end_date').datepicker( {
           dateFormat: "yy-mm-dd",
           showButtonPanel: true,
           inline: true,  
           defaultDate: "+1w",
           changeMonth: true,
           numberOfMonths: 3,
           onClose: function( selectedDate ) {
            $( "#from" ).datepicker( "option", "maxDate", selectedDate );
      }
        });

});
</script>