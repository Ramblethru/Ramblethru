<div class="searchpage">
	<div class="note-header">
		<h1 id="note-search-title">Search for Notes on Locations you're interested in</h1>
	</div>
		<%= form_tag(rambles_path, :method => "get", class: "search-form") do %>
			<div class="input-append">
				<%= text_field_tag :search, params[:search], class: "span2", placeholder: "Enter Destination name" %>
				<button class="btn" type="submit">Search</button>
			</div>
		<% end %>
	<div class="container">
		<% if @ramble %>
		  <% @ramble.each do |ramble| %>
		<div class="rambles">
			<div class="rambles-title">
			  <% ramble.notes.each do |note| %>
      </div>
			  <div class="notesshow">
				  Note: <%= note.body %>
			  </div>
			  <div class="tagshow">
				  Tag: <%= note.tag_list %>
			  </div>
			    <% end %>
        <% end %>
      </div>
		</div>
	</div>
	<% end %>
