<div class="searchpage">
	<div class="header">
		<h3>Search for Notes on Locations you're interested in(Search for rambles with entered location as destination, and pull notes associated with that ramble?)</h3>
		<%= form_tag(rambles_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
	</div>
	<% @ramble.each do |ramble| %>
  <div class="rambles">
    <h1 class="rambles-title"><% ramble.notes.each do |note| %>
    	<%= note.body %>
    	<% end %></h1>
  </div>
<% end %>
</div>
