<div id="close">
<% [:success, :info, :warning, :alert,:notice].each do |flash_type| %>
  <% if flash[flash_type] %>
    <div data-alert class="alert-box <%= flash_type %> radius">
      <%= flash[flash_type] %>
      <a href="#" class="close">&times;</a>
    </div>
  <% end %>
<% end %>
</div>
<script type="text/javascript">
  document.getElementById('close').addEventListener('click', function(e) {
    e.preventDefault();
    this.style.display = 'none';
  }, false);
</script>