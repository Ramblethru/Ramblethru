<div class="usershow">
	<h1> My Profile </h1>
	<div class="photo">
		<%= image_tag @user.avatar.url(:medium) %>
		<%= form_for @user do |form| %>
		<%= form.file_field :avatar %>
		<%= form.submit "Add" %>
		<% end %>
		
	</div>
	<div class="userinfo">
		<div class="name">
			<%= @user.name %>
			<div class="editname">
				<%= link_to 'Edit Name', edit_name_path %>
			</div>
		</div>
		<div class="lives-in">
			<h5>Residence:<h5>
				<%= link_to 'Edit where you live', edit_lives_in_path %>
			<%= @user.lives_in %>
		</div>
		<div class="bio">
			<h5>BIO:</h5>
			<%= @user.bio %><br>
			<%= link_to 'Edit Bio', edit_bio_path %>
		</div>
	</div>
	<div class="container">
		<div class="usertrips">
			<h3> My Rambles(dropdown?) </h3>
			
			<div class="userrambles">
			<% @user.rambles.each do |r| %>
				<%= link_to r.destination, ramble_path(r) %><br>
				<div class="show"><a href="#"> Show/hide notes </a></div>
				<%= r.start_date %> - <%= r.end_date %><br>
				<div class="noteshow">
				<% if r.reddit_thread != nil %>
				Saved from Reddit: <%= link_to r.reddit_thread, r.reddit_thread %>
				<br>
				<% end %>
				<% if r.instagram_url != nil %>
				Saved from Instagram:<br> <%= link_to image_tag r.instagram_url %><br>
				<% end %>
				
				<% r.notes.each do |n| %>
					Note: <%= n.body %><br>
					<% end %>
				</div>
					<script type="text/javascript">
 $(".show").click(function () {
            $(".noteshow").toggle();
        });
</script>
				<% end %>
				
			</div>
			<div class="usernotes">
			
			</div>
		</div>
	</div>
	<div class="saved"><a href='#'>View saved notes(dropdown? Not here? Something?)</a>
	</div>
</div>
